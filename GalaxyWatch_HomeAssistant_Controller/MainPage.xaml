<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GalaxyWatch_HomeAssistant_Controller.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label  Text="Lights"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    HeightRequest="40"
                    Margin="0, 10, 0, 0"
                    />
            <ScrollView x:Name="LightListView"
                        VerticalOptions="CenterAndExpand"
                        >
                <StackLayout  
                    x:Name="LightListLayout">

                </StackLayout>
            </ScrollView>
            <ImageButton
                x:Name="BtnSettings"
                ClassId="setting"
                Clicked="BtnSettings_Clicked"
                Source="setting.png"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End"
                HeightRequest="60"
                Margin="0, 0, 0, 10"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
